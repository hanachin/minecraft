{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "ec2:StartInstances"
      ],
      "Resource": [
        "arn:aws:logs:*:*:*",
        "arn:aws:ec2:ap-northeast-1:$accountID:instance/*"
      ],
      "Condition": {
        "StringEquals": {
          "ec2:ResourceTag/Name": "minecraft"
        }
      }
    }
  ]
}
