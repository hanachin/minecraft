resources:
  - type: user
    name: mc
  - type: directory
    path: /opt/minecraft
    owner: mc
    group: mc
  - type: line
    path: /etc/fstab
    pattern: '/opt/minecraft'
    line: "/dev/xvdf /opt/minecraft ext4 defaults,nofail 0 2"
  - type: command
    script: mount -a
  - type: file
    path: /opt/minecraft/eula.txt
    content: eula=true
    owner: mc
    group: mc
  - type: remote_file
    destination: /opt/minecraft/minecraft_server.jar
    source: minecraft_server.jar
    owner: mc
    group: mc
  - type: remote_file
    destination: /etc/init.d/minecraft
    source: minecraft
    mode: 0755
    owner: root
    group: root
  - type: remote_file
    destination: /opt/minecraft/server.properties
    source: server.properties
    owner: mc
    group: mc
  - type: command
    check_script: chkconfig | grep minecraft
    script: chkconfig --add minecraft
  - type: service
    name: minecraft
  - type: remote_file
    destination: /home/mc/.envrc
    source: .envrc
    owner: mc
    group: mc
  - type: remote_file
    destination: /home/mc/goodbye.sh
    source: goodbye.sh
    owner: mc
    group: mc
  - type: remote_file
    destination: /home/mc/hello.sh
    source: hello.sh
    owner: mc
    group: mc
  - type: remote_file
    destination: /home/mc/crontab
    source: crontab
    owner: mc
    group: mc
  - type: command
    script: crontab -u mc /home/mc/crontab
  - type: command
    script: /sbin/service minecraft command 'whitelist on'
  <%- players.each do |player| %>
  - type: command
    script: /sbin/service minecraft command 'whitelist add <%= player %>'
  <%- end -%>
